<!--=== Content Part ===-->
<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<%= javascript_include_tag "jquery.ui.addresspicker" %>

<script type="text/javascript">
  $(function() {
    var addresspicker = $( "#addresspicker" ).addresspicker({
      regionBias: "sg"});
  });
</script>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class ="one-page">
  <div class="one-page-inner one-light-green">
    <div class="container">
     <div class="row margin-bottom-30">
      <div class="col-sm-6 md-margin-bottom-40">
        <div class="img-responsive">
          <%= image_tag("Landing-Image.png", :alt => "Home Square Preview", :id => "landing-image", :class => "img-responsive") %> 
        </div>
      </div>
      <div class="col-sm-6 md-margin-bottom-40">
        <div class="img-responsive">
          <%= image_tag("Landing-TagLine.png", :alt => "Home Square Tag Line", :id => "landing-tagline", :class => "img-responsive") %> 
        </div>
        <h5>Enter your address to begin</h5>

        <%= simple_form_for :lookup, { url: new_user_registration_path, :html => { :method => 'GET' }} do |f| %>
        <div class="form-inputs">
          <%= f.input :address, :placeholder => "e.g. 120 Tanjong Rhu Road, Singapore", :input_html => {:id => "addresspicker", :class => "form-control margin-bottom-20"}, label: false %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Join your neighborhood!", :class => 'btn-u btn-block color-green' %>
        </div>
        <% end %>

      </div>
    </div><!--/row-->
  </div>
</div>
 <div class="header-divider"></div> 
</div>

<div class="container">
<!-- Promo box -->

<div class="row">
        <div class="col-sm-4">
            <div class="promo-box">
                <i class="fa fa-group color-green"></i>
                <strong>Resident Lists</strong>
                <p>Discover Neighbors in your Apartment & Neighborhood</p>                
            </div>        
        </div>

        <div class="col-sm-4">
            <div class="promo-box">
                <i class="fa fa-bullhorn color-green"></i>
                <strong>Local Discussions</strong>
                <p>Communicate about things that matter to you on a local level</p>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="promo-box">        
                <i class="fa fa-rocket color-green"></i>
                <strong>Interest Groups</strong>
                <p>Join Interest Groups in your Neighborhood like Pets, Parenting, Badminton etc</p>
            </div>
        </div>
    </div>

<div class="row">
        <div class="col-sm-4">
            <div class="promo-box">
                <i class="fa fa-rss color-green"></i>
                <strong>Local Events</strong>
                <p>Join & Organise Events in your Neighborhood</p>                
            </div>        
        </div>

        <div class="col-sm-4">
            <div class="promo-box">
                <i class="fa fa-money color-green"></i>
                <strong>Classifieds</strong>
                <p>Buy & Sell items within your Neighborhood</p>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="promo-box">        
                <i class="fa fa-dollar color-green"></i>
                <strong>Local Deals</strong>
                <p>Discover Deals & Discounts in your Neighborhood</p>
            </div>
        </div>
    </div>

<!-- End Promo box -->
</div>


<!--=== End Content Part ===-->