<div class="margin-top-30 col-md-offset-1">
<%= simple_form_for :message, url: [:reply, conversation] do |f| %>
  <%= f.input :subject, :as => "hidden", :input_html => {:value => "Conversation"} %>

   <%= f.input :body, :placeholder => "Reply here", :input_html => { :class => "form-control input-lg no-border", :rows => "2" }, :label => false %>

 			<footer class="panel-footer bg-light">
 				<%= f.button :submit, "Send", :class => "btn btn-u pull-right" %>
 				<ul class="nav nav-pills file-input">
 					<li>
 					</li>
 				</ul>
 			</footer>
<% end %>
</div>