<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>

<% if @post.attached_image.exists? %>
<p>
  <strong>Attached Image:</strong>
  <%= image_tag @post.attached_image.url(:medium), :class => "img-responsive" %>
</p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
