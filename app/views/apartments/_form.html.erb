<%= simple_form_for(@apartment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :alias %>
    <%= f.input :slug %>
    <%= f.input :description %>
    <%= f.input :neighborhood_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
