
<div class = "container">
<div class="row">
    <p></p>
</div>

<div class="row">

    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "reg-page"}) do |f| %>
        
        <div class="reg-header">            
            <h2>Login to your account</h2>
        </div>

        <p>
      <%= link_to user_omniauth_authorize_path(:facebook), :class => 'btn btn-block btn-social btn-facebook' do %>
        <i class="fa fa-facebook"></i>Sign in with Facebook&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <% end %> 
    </p>

    <p class="color-grey text-center">- OR -</p>

        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.input :email, :input_html => {:class => "form-control"}, :placeholder => "Email Address", :label => false, :autofocus => true %>
        </div>                    
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.input :password, :input_html => {:class => "form-control"}, :placeholder => "Password", :label => false %>
        </div>                    

        <div class="row">
            <div class="col-md-6">
                <label class="checkbox"><%= f.check_box :remember_me, :checked => true if devise_mapping.rememberable? %> Stay signed in
                </div>
                <div class="col-md-6">
                    <%= f.button :submit, "Login", :class => 'btn-u pull-right' %>                        
                </div>
            </div>

            <hr>

            <h4>Forgot your Password ?</h4>
            <p>no worries, <%= link_to "click here", new_password_path(resource_name), :class => "color-green" %> to reset your password.</p>

            <hr>

            <h4>Don't have an account ?</h4>
            <p><%= link_to "Create an account", new_registration_path(resource_name), :class => "color-green" %></p>
            <% end %>
            
        </div>
    </div><!--/row-->
</div>
