
<div class = "container">
  <div class="row">
    <p></p>
  </div>

  <div class="row">

    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
      <div class="authform">
        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "reg-page"}) do |f| %>
        <div class="reg-header">            
          <h2>Change your password</h2>
          
        </div>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
        	<%= f.password_field :password, class: 'form-control', :label => false, :placeholder => "New password", :autofocus => true %>
        	<p></p>
        	<%= f.password_field :password_confirmation, class: 'form-control', :label => false, :placeholder => "Confirm new password" %>
        </div>
        <%= f.submit 'Change my password', :class => 'btn-u pull-right' %>
        <% end %>
      </div>
    </div>
  </div><!--/row-->
</div>
