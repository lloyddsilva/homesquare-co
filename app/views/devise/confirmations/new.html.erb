
<div class = "container">
  <div class="row">
    <p></p>
  </div>

  <div class="row">

    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
      <div class="authform">
        <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "reg-page"}) do |f| %>
        <div class="reg-header">            
          <h2>Resend confirmation instructions</h2>
          
        </div>
        <%= devise_error_messages! %>
        <div class="form-group">
        	<%= f.email_field :email, class: 'form-control', :label => false, :placeholder => "Email address", :autofocus => true %>
        </div>
        <%= f.submit 'Resend confirmation instructions', :class => 'btn-u pull-right' %>
        <% end %>
      </div>
    </div>
  </div><!--/row-->
</div>
