<div class="headline">
  <h2>Events</h2>
  <%= link_to 'Add New Event', [:new, @eventable, :event], :class => "btn-u pull-right" %>
</div>

<% @events.each do |event| %>
<div class="media">
  <div class="media-body">
  
    <div class="blog-post-tags pull-right">
        <ul class="list-unstyled list-inline blog-info">
          <% if current_user == event.owner %>
            <li><i class="fa fa-edit"></i> <%= link_to 'Edit', edit_event_path(event) %></li>
            <li><i class="fa fa-trash-o"></i> <%= link_to 'Delete', event, method: :delete, data: { :confirm => 'Are you sure you want to delete this event?' } %></li>
          <% end %>
          <%= link_to 'Open', event_posts_path(event), :class => "btn-u" %>
        </ul>                                       
      </div>
    
    <h4 class="media-heading color-green"><%= event.name %></h4>
    <div class="blog-post-tags margin-top-10">
        <ul class="list-unstyled list-inline blog-info">
          <li><i class="fa fa-map-marker"></i> <%= event.venue %></li>
          <li><i class="fa fa-calendar"></i> <%= event.event_date.strftime("%A, %d %B, %Y") %> | <%= event.start_time.strftime("%H:%M") %> - <%= event.end_time.strftime("%H:%M") %></li>
        </ul>
    </div>
    <p><%= event.description %></p>
  </div>
</div>

<hr>
<% end %>