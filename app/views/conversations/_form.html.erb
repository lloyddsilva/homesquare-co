<%= simple_form_for :conversation, url: :conversations do |f| %>
  <%= f.input :recipient, :as => "hidden", :input_html => {:value => @recipient.id} %>
  <%= f.input :subject, :as => "hidden", :input_html => {:value => "Conversation"} %>
  <%= f.input :body, :placeholder => "Send a message here", :input_html => { :class => "form-control input-lg no-border", :rows => "2" }, :label => false %>

 			<footer class="panel-footer bg-light">
 				<%= f.button :submit, "Send", :class => "btn btn-u pull-right" %>
 				<ul class="nav nav-pills file-input">
 					<li> 						
 					</li>
 				</ul>
 			</footer>
<% end %>
