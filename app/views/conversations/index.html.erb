<div class="headline">
	<h2>Conversations</h2>
</div>

<% @conversations.each do |conversation| %>
<div class="media">
	<% conversation.participants.each do |participant| %>
	<% if participant != current_user %>
	<%= link_to user_path(participant), :class => "pull-left" do %>
	<%= image_tag participant.avatar.url(:small) %>
	<% end %>

	<span><%= link_to "View Conversation", conversation_path(conversation), :class => "btn-u pull-right" %></span>
	<div class="media-body">
		<h4 class="media-heading"><%= link_to participant.full_name, user_path(participant) %>
		</h4>
	</div>
	<% end %>
	<% end %>

</div>


<hr>
<% end %>
